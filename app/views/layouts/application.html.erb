<!DOCTYPE html>
<html>
<head>
  <title>Brewtome</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <nav class="top-bar">
  <div class="text-center top-bar-logo">
    <a href="/"><%= image_tag("navbar_logo.png", width: 400) %></a>
  </div>


    <section class="top-bar-section">
      <ul class="right">
        <%- if current_user -%>
          <%= link_to destroy_user_session_path, method: :delete do %>
              <button class="button-48" role="button"><span class="text">sign out</span></button>
          <% end %>
        <%- else -%>

          <%= link_to new_user_registration_path do %>
            <div>
              <button class="button-48" role="button"><span class="text">sign up</span></button>
            </div>
          <% end %>

          <%= link_to new_user_session_path do%>
            <div>
              <button class="button-48" role="button"><span class="text">sign in</span></button>
            </div>
          <% end %>
          
        <%- end -%>
      </ul>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  
  <%- if Rails.env.development? || Rails.env.test? -%> 
    <%= javascript_tag do %>
      window.railsEnv = '<%= Rails.env %>'
    <%- end -%>
  <%- end -%>
  <%= javascript_pack_tag 'application' %>
  
  <%= yield :extra_footer %>
</body>
</html>
